<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity">

    <ImageView
        android:id="@+id/imgMango2"
        android:layout_width="169dp"
        android:layout_height="118dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="224dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mango" />

    <TextView
        android:id="@+id/tvcart"
        android:layout_width="389dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:background="#43A047"
        android:drawableRight="@drawable/ic_baseline_shopping_cart_24"
        android:text="cart"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvmango2"
        android:layout_width="146dp"
        android:layout_height="94dp"
        android:layout_marginTop="160dp"
        android:text="Mango"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btRemove"
        android:layout_width="99dp"
        android:layout_height="71dp"
        android:layout_marginTop="260dp"
        android:background="#43A047"
        android:text="Remove"
        app:layout_constraintEnd_toEndOf="@+id/tvcart"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvcart" />

    <Button
        android:id="@+id/btAdd"
        android:layout_width="108dp"
        android:layout_height="71dp"
        android:layout_marginTop="264dp"
        android:background="#43A047"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="204dp"
        android:layout_height="47dp"
        android:layout_marginTop="340dp"
        android:text="Total Price"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btCheckout"
        android:layout_width="137dp"
        android:layout_height="52dp"
        android:layout_marginTop="380dp"
        android:background="#43A047"
        android:text="Checkout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvcart" />

    <TextView
        android:id="@+id/btIcons"
        android:layout_width="369dp"
        android:layout_height="71dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="504dp"
        android:background="#43A047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvcart" />

    <TextView
        android:id="@+id/tvHome"
        android:layout_width="72dp"
        android:layout_height="50dp"
        android:layout_marginTop="516dp"
        android:drawableLeft="@drawable/ic_baseline_home_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvcart" />

    <TextView
        android:id="@+id/tvNotice"
        android:layout_width="62dp"
        android:layout_height="43dp"
        android:layout_marginTop="524dp"
        android:layout_marginEnd="200dp"
        android:drawableLeft="@drawable/ic_baseline_circle_notifications_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPerson"
        android:layout_width="54dp"
        android:layout_height="64dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="68dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btBackProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        android:layout_marginEnd="192dp"
        android:background="#43A047"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>